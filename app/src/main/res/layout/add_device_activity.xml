<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context="com.aliyun.iot.ilop.demo.page.ilopmain.AddDeviceActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/local_device_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp">
                <FrameLayout
                    android:id="@+id/local_device_panel_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:text="本地发现设备"/>
                    <LinearLayout
                        android:id="@+id/found_device_ll"
                        android:layout_marginTop="90dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/local_device_find_panel"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    android:background="#80FFFFFF">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:textSize="13sp"
                        android:textColor="#4A4A4A"
                        android:text="扫描本地设备..."/>
                </FrameLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/local_device_panel"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:text="支持添加的设备"/>
                <LinearLayout
                    android:id="@+id/support_device_ll"
                    android:layout_marginTop="28dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/fail_msg_panel"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="#FFFFFF"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/verify_fail_bg"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9B9B9B"
                            android:layout_marginLeft="80dp"
                            android:textSize="15sp"
                            android:text="没有支持的设备"
                            android:layout_gravity="center_vertical"/>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/device_verifying"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="96dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="240dp"
                    android:text=" %" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="300dp"
                    android:text="设备验证中..." />
            </FrameLayout>

        </RelativeLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#333333"
            android:text="选择设备类型"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center|left"
            android:id="@+id/ilop_main_back_btn"
            android:background="@mipmap/nav_left"
            android:textColor="#108EE9"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-1dp"
            android:background="#C6C8C9"/>
    </FrameLayout>
    <LinearLayout
        android:background="#F6F6F6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <ListView
            android:id="@+id/lv_cate_a"
            android:layout_width="85dp"
            android:scrollbars="none"
            android:divider="@null"
            android:layout_height="match_parent"
            />
        <GridView
            android:id="@+id/lv_cate_b"
            android:scrollbars="none"
            android:divider="@null"
            android:numColumns="3"
            android:layout_width="0dp"
            android:background="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
