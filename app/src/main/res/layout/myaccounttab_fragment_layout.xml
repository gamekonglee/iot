<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-1dp"
            android:background="#C6C8C9" />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/my_userinfo"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp">

        <ImageView

            android:id="@+id/my_userlogo_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_default"
            />


        <TextView
            android:id="@+id/my_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="13dp"
            android:layout_toRightOf="@+id/my_userlogo_imageview"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_9B9B9B"
            android:textSize="14dp" />


        <View
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/back_arrow_gray"
            android:rotation="180" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/my_about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="21dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="13dp"
            android:gravity="center"
            android:text="关于"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <View
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/back_arrow_gray"
            android:rotation="180" />
    </RelativeLayout>
</LinearLayout>