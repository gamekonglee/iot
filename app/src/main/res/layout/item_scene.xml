<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="167dp"
    android:layout_height="102dp"
    android:id="@+id/rl_root"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.view.CircleImageView
        app:type="2"
        android:id="@+id/iv_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.view.CircleImageView
        android:id="@+id/iv_color"
        app:type="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.view.FontIconView
        android:id="@+id/iv_icon"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/tv_name"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_dev_count"
        android:textColor="#e5e5e5"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_doit"
        android:text="@string/str_excute"
        android:textColor="#252525"
        android:textSize="15sp"
        android:background="@drawable/bg_corner_f8f8f8_15"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="45dp"
        android:layout_alignParentRight="true"
        android:layout_height="45dp">
        <com.view.FontIconView
            android:id="@+id/iv_setting"
            android:text="@string/icon_setting"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/rl_item_click"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</RelativeLayout>
</RelativeLayout>